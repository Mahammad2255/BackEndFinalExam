@model IEnumerable<Size>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-2 h3 mb-4 text-gray-800">
    <a asp-controller="Size" asp-action="Create" asp-area="Manage" class="btn btn-primary">Create</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Size size in Model)
        {
            <tr>

                <th scope="row">@size.Id</th>

                <th scope="row">@size.Name</th>

                <td>
                    <a class="btn btn-primary" asp-action="Detail" asp-area="manage" asp-route-id="@size.Id">Detail</a>
                    <a class="btn btn-warning" asp-action="Update" asp-area="manage" asp-route-id="@size.Id">Update</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-area="manage" asp-route-id="@size.Id">Delete</a>

                </td>





            </tr>


        }
    </tbody>
</table>